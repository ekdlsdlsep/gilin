<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="8dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/sulzzung_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-61dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ulzzung_textView1"
                android:layout_width="46dp"
                android:layout_height="47dp"
                android:layout_marginLeft="17dp"
                android:clickable="true"
                android:text="&#60;"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/sulzzung_textView2"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:text="설정"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="13dp"
            android:background="#CCA00D" />

        <androidx.cardview.widget.CardView
            android:layout_width="353dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="#FAF1D3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/sulzzung_volume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="안내 볼륨"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <SeekBar
                    android:id="@+id/sulzzung_volumebar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="353dp"
            android:layout_height="51dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="5dp"
            app:cardBackgroundColor="#FAF1D3">

            <TextView
                android:id="@+id/sulzzung_always"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="언제나 긴급 모드"
                android:textSize="18sp"
                android:textStyle="bold"
                android:translationX="10dp"
                android:translationY="15dp" />

            <Switch
                android:id="@+id/sulzzung_switch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Switch"
                android:translationX="260dp"
                android:translationY="15dp" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/sulzzung_textView3"
            android:layout_width="363dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="어플이 실행되지 않은 경우에도 긴급전화 기능을 실행합니다."
            android:translationX="21dp" />

        <TextView
            android:id="@+id/sulzzung_textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="계정 정보"
            android:textSize="18sp"
            android:textStyle="bold"
            android:translationX="19dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="353dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="#FAF1D3">

            <TextView
                android:id="@+id/sulzzung_textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="비밀번호 재설정"
                android:textSize="18sp"
                android:textStyle="bold"
                android:translationX="10dp"
                android:translationY="13dp" />

            <Button
                android:id="@+id/sulzzung_button2"
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:text=">"
                android:textAlignment="textEnd"
                android:textColorLink="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:translationX="90dp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/ulzzung_textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="계정 관리"
            android:textSize="18sp"
            android:textStyle="bold"
            android:translationX="22dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="356dp"
            android:layout_height="46dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="19dp"
            app:cardBackgroundColor="#F9F0D2">

            <Button
                android:id="@+id/sulzzung_button3"
                android:layout_width="258dp"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:text="&#62;"
                android:textAlignment="textEnd"
                android:textSize="24sp"
                android:textStyle="bold"
                android:translationX="90dp" />

            <TextView
                android:id="@+id/ulzzung_textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="로그아웃"
                android:textSize="18sp"
                android:textStyle="bold"
                android:translationX="10dp"
                android:translationY="12dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="356dp"
            android:layout_height="51dp"
            android:layout_marginStart="19dp"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#F8EFD1">

            <Button
                android:id="@+id/sulzzung_button4"
                android:layout_width="258dp"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:text="&#62;"
                android:textAlignment="textEnd"
                android:textSize="24sp"
                android:textStyle="bold"
                android:translationX="90dp" />

            <TextView
                android:id="@+id/ulzzung_textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="계정탈퇴"
                android:textSize="18sp"
                android:textStyle="bold"
                android:translationX="10dp"
                android:translationY="14dp" />

            <LinearLayout
                android:layout_width="407dp"
                android:layout_height="63dp"
                android:orientation="vertical">

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/button"
            android:layout_width="362dp"
            android:layout_height="56dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="#CCA000"
            android:text="변경사항 저장"
            android:textSize="18dp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>